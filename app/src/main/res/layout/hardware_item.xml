<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/foto_produto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/gabinete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/nome_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gabinete Gamer"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foto_produto"
        />
    <TextView
        android:id="@+id/descricao_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:text="Gabinete Gamer A série Carbide SPEC-DELTA RGB é uma caixa ATX de torre média de vidro temperado com estilo angular impressionante, fluxo de ar potente e três ventiladores de refrigeração RGB incluídos.
R$ 799,00"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nome_produto"
        app:layout_constraintStart_toEndOf="@+id/foto_produto"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/preco_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$800.0"
        app:layout_constraintTop_toBottomOf="@+id/descricao_produto"
        app:layout_constraintStart_toEndOf="@+id/foto_produto"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>